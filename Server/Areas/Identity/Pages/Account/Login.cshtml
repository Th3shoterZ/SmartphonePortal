@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="mt-10 max-w-md mx-auto">
    <h1 class="font-bold text-3xl">@ViewData["Title"]</h1>
    <hr />
</div>
<div class="mt-10 max-w-md mx-auto">
    <div class="max-w-1/2">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>
                <div class="flex flex-col my-2">
                    <label asp-for="Input.Username" class="font-bold">Username</label>
                    <input asp-for="Input.Username"
                           class="px-2 rounded border border-gray-600 drop-shadow-md bg-gray-100 h-10"
                           autocomplete="username"
                           aria-required="true" />
                    <span asp-validation-for="Input.Username" class="text-sm text-red-600"></span>
                </div>
                <div class="flex flex-col my-2">
                    <label asp-for="Input.Password" class="font-bold"></label>
                    <input asp-for="Input.Password" class="px-2 border border-gray-800 rounded drop-shadow-md bg-gray-100 h-10" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
                </div>
                <div class="mt-6">
                    <div class="">
                        <label asp-for="Input.RememberMe" class="">
                            <input class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500"
                                   asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="text-right">
                    <button class="w-32 text-sm text-white font-bold h-12 bg-sky-500 hover:bg-indigo-500 transition uppercase sm:rounded rounded-lg"
                            id="login-submit"
                            type="submit">
                        Log in
                    </button>
                </div>
                <div class="mt-8 divide-y">
                    <p class="my-4 pt-3">
                        <a id="forgot-password" class="hover:text-indigo-500 text-black underline"
                           asp-page="./ForgotPassword">
                            Forgot your password?
                        </a>
                    </p>
                    <p class="my-4 pt-3">
                        <a asp-page="./Register" class="hover:text-indigo-500 text-black underline"
                           asp-route-returnUrl="@Model.ReturnUrl">
                            Register
                        </a>
                    </p>
                    <p class="my-4 pt-3">
                        <a id="resend-confirmation" class="hover:text-indigo-500 text-black underline"
                           asp-page="./ResendEmailConfirmation">
                            Resend email confirmation
                        </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
