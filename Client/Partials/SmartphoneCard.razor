@using SmartphonePortal_Vervoort_Wagner.Shared.ViewModels
@inject NavigationManager navigationManager

<div @onclick=@GoToDetails class="flex bg-gray-700 p-2 my-5 mx-auto text-white border border-gray-500 max-w-2xl rounded-lg cursor-pointer hover:scale-105 transition">
    <div class="mr-10">
        <img src="http://via.placeholder.com/200x200" />
    </div>
    <div class="grow flex flex-col">

        <div class="font-bold text-xl">
            @Smartphone.Name
        </div>
        <div>
            by @Smartphone.Manufacturer.Name
        </div>
    </div>
</div>

@code {
    [Parameter] public SmartphoneViewModel Smartphone { get; set; } = new();

    public void GoToDetails()
    {
        navigationManager.NavigateTo("/smartphone/" + Smartphone.SmartphoneId);
    }
}
